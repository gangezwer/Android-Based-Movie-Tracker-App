<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegisterMovie">

    <!--Edit text to enter course name-->

    <TextView
        android:id="@+id/textView2"
        android:layout_width="313dp"
        android:layout_height="67dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Register Movie"
        android:textColor="@color/teal_200"
        android:textSize="40sp" />

    <EditText
        android:id="@+id/idEdtMovieName"
        android:layout_width="394dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:inputType="text"
        android:hint="Enter movie Name" />

    <!--Edit text to enter course name-->
    <EditText
        android:id="@+id/idEdtMovieYear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:inputType="number"
        android:hint="Enter movie relesed year" />

    <!--Edit text to enter course name-->
    <EditText
        android:id="@+id/idEdtMovieDirector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:inputType="text"
        android:hint="Enter movie director name" />

    <!--Edit text to enter course name-->
    <EditText
        android:id="@+id/idEdtMovieActors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:inputType="text"
        android:hint="Enter actor/actress Names separate by ',' "/>

    <!--edit text to enter course duration-->
    <EditText
        android:id="@+id/idEdtMovieRating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:inputType="number"
        android:hint="Enter movie rating" />

    <!--edit text to display course tracks-->
    <EditText
        android:id="@+id/idEdtMovieReview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:inputType="text"
        android:hint="Enter movie review" />

    <!--button for adding new course-->
    <Button
        android:id="@+id/idBtnAddCourse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="SAVE"
        android:textAllCaps="false" />

</LinearLayout>