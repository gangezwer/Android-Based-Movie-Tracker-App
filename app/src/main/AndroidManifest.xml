<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mymovieappbrandnew">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyMovieappBrandNew">
        <activity android:name=".ImdbImageView"></activity>
        <activity android:name=".ViewImdbRating" />
        <activity android:name=".IMDBRating" />
        <activity
            android:name=".SearchActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterMovie" />
        <activity android:name=".UpdateMovie" />
        <activity android:name=".DisplayEditMovieList" />
        <activity android:name=".Favorites" />
        <activity android:name=".DisplayMovies" />
    </application>

</manifest>